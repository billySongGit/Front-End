
@{
    ViewBag.Title = "AccountWizardNg";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section style{
    <link href="~/Content/pictures-uploadCrop.css" rel="stylesheet" />
    <link href="~/Content/jquery.Jcrop.css" rel="stylesheet" />
    <link href="~/Scripts/app/account/css/followerModal.css" rel="stylesheet" />
    <link href="~/Scripts/app/account/css/pictureModal.css" rel="stylesheet" />
    <link href="~/Scripts/app/account/css/accountPage.css" rel="stylesheet" />
    <link href="~/Scripts/app/account/css/settingsPage.css" rel="stylesheet" />

}
<div class="content">
    <div class="container-fluid">
        <div class="col-md-8 col-sm-offset-2">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card wizard-card" data-color="rose" id="wizardProfile">
                    <div class="wizard-header">
                        <h2 class="wizard-title">
                            Your Account
                        </h2>
                    </div>
                    <!--        for the tab at the top of the card        -->
                    <div class="wizard-navigation" ng-controller="accountTabController as acctTabCtrl" id="accountTabs">
                        <ul class="nav-pills nav nav-tabs">
                            <li class="nav-pills nav nav-tabs tabs-admin"
                                data-color="rose"
                                get-value-to-check="acctTabCtrl.checkIsInfluencer()"
                                remove-class="tabs-admin"
                                add-class="tabs-public"
                                ng-class="acctTabCtrl.tabClass(tab)"
                                ng-repeat="tab in acctTabCtrl.tabs">
                                <a href="{{tab.link}}" ng-click="acctTabCtrl.setSelectedTab(tab)">{{tab.label}}</a>
                            </li>
                        </ul>

                        <div class="tab-content active" ng-view></div>
                        <!--        views go in here        -->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

